---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="image-container">
      <div class="image-bg imagen-1"></div>
    </div>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
  }
  html {
    font-family: "Rubik", sans-serif;
    background-color: #f6f6f6;
  }
  code {
    font-family: "Rubik", sans-serif;
  }
  .image-container {
    /* Set the container fixed to cover the entire viewport */
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1; /* Move the container behind other elements */
  }

  .image-bg {
    background-size: cover;
    background-position: center;
    height: 100vh;
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0; /* Hide the images by default */
  }

  /* Show each image based on its index */
  .imagen-1 {
    background-image: url(../../public/assets/multimedia/IMG_4592.JPG);
  }

  /* Set the images to be stacked vertically one on top of another */
  .image-container .image-bg {
    opacity: 1;
  }
</style>
